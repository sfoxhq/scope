    "redux-immutable": "4.0.0",
    "redux-logger": "3.0.6",
    "redux-thunk": "2.2.0",
    "reqwest": "2.0.5",
    "reselect": "3.0.1",
    "reselect-map": "1.0.3",
    "styled-components": "3.4.10",
    "weaveworks-ui-components": "0.20.0",
    "whatwg-fetch": "2.0.3",
    "xterm": "3.10.1"
